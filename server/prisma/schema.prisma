generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(uuid())
  email               String   @unique
  password            String?  // Optional for Facebook-only users
  name                String
  facebookId          String?  // Facebook User ID
  profilePic          String?  // Profile picture URL
  notifyNewMessages   Boolean  @default(true)  // Email for new messages
  notifyDailySummary  Boolean  @default(false) // Daily summary email
  notifyBotErrors     Boolean  @default(true)  // Alert on bot errors
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  bots                Bot[]

  @@index([facebookId])
}

model Bot {
  id                 String         @id @default(uuid())
  name               String
  description        String?
  userId             String
  user               User           @relation(fields: [userId], references: [id])
  facebookPageId     String?
  facebookPageName   String?
  facebookToken      String?
  webhookVerifyToken String         @default(uuid())
  isActive           Boolean        @default(false)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  flows              Flow[]
  blocks             Block[]
  messages           Message[]
  analytics          Analytics[]
  sessions           UserSession[]
  contacts           Contact[]
  broadcasts         Broadcast[]
  conversations      Conversation[]
}

model Flow {
  id        String   @id @default(uuid())
  name      String
  botId     String
  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  nodes     String   @default("[]") @db.Text
  edges     String   @default("[]") @db.Text
  triggers  String   @default("[]") @db.Text // Keywords/phrases that trigger this flow
  isDefault Boolean  @default(false)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSession {
  id             String   @id @default(uuid())
  botId          String
  bot            Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  senderId       String
  currentNodeId  String?  // For Flow-based execution
  currentBlockId String?  // For Block-based execution
  currentCardIdx Int      @default(0) // Current card index within the block
  context        String   @default("{}") @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([botId, senderId])
}

model Message {
  id          String   @id @default(uuid())
  botId       String
  bot         Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  senderId    String
  content     String
  direction   String
  messageType String
  createdAt   DateTime @default(now())
}

model Analytics {
  id               String   @id @default(uuid())
  botId            String
  bot              Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  date             DateTime @db.Date
  totalMessages    Int      @default(0)
  incomingMessages Int      @default(0)
  outgoingMessages Int      @default(0)
  uniqueUsers      Int      @default(0)

  @@unique([botId, date])
}

// Block - Chatfuel-style conversation blocks (like pages/screens)
model Block {
  id              String   @id @default(uuid())
  name            String
  botId           String
  bot             Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  groupName       String?  // For organizing blocks into groups (e.g., "DEFAULT", "REGISTER")
  isWelcome       Boolean  @default(false) // Welcome Message - first block user sees
  isDefaultAnswer Boolean  @default(false) // Default Answer - when bot doesn't understand
  isEnabled       Boolean  @default(true)  // Whether this block is active
  cards           String   @default("[]") @db.Text // JSON array of cards/messages
  triggers        String   @default("[]") @db.Text // Keywords that trigger this block
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Contact - Users who have interacted with the bot
model Contact {
  id                   String                 @id @default(uuid())
  botId                String
  bot                  Bot                    @relation(fields: [botId], references: [id], onDelete: Cascade)
  senderId             String                 // Facebook/Platform user ID
  name                 String?
  profilePic           String?
  lastSeenAt           DateTime               @default(now())
  messageCount         Int                    @default(0)
  tags                 String                 @default("[]") @db.Text // JSON array of tags
  isSubscribed         Boolean                @default(true)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  broadcastRecipients  BroadcastRecipient[]
  conversation         Conversation?

  @@unique([botId, senderId])
}

// Broadcast - Bulk messages to contacts
model Broadcast {
  id           String               @id @default(uuid())
  botId        String
  bot          Bot                  @relation(fields: [botId], references: [id], onDelete: Cascade)
  name         String
  message      String               @db.Text // JSON message structure
  messageType  String               @default("text") // text, image, card
  status       String               @default("draft") // draft, scheduled, sending, sent, failed
  scheduledAt  DateTime?
  sentAt       DateTime?
  targetFilter String               @default("{}") @db.Text // JSON filter criteria
  totalTargets Int                  @default(0)
  sentCount    Int                  @default(0)
  failedCount  Int                  @default(0)
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  recipients   BroadcastRecipient[]
}

// BroadcastRecipient - Track individual recipients
model BroadcastRecipient {
  id          String    @id @default(uuid())
  broadcastId String
  broadcast   Broadcast @relation(fields: [broadcastId], references: [id], onDelete: Cascade)
  contactId   String
  contact     Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  status      String    @default("pending") // pending, sent, failed
  sentAt      DateTime?
  error       String?

  @@unique([broadcastId, contactId])
}

// Conversation - For Live Chat
model Conversation {
  id              String    @id @default(uuid())
  botId           String
  bot             Bot       @relation(fields: [botId], references: [id], onDelete: Cascade)
  contactId       String    @unique
  contact         Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  status          String    @default("bot") // bot, human, closed
  assignedTo      String?   // User ID of assigned agent
  unreadCount     Int       @default(0)
  lastMessageAt   DateTime  @default(now())
  humanTakeoverAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([botId, contactId])
}
